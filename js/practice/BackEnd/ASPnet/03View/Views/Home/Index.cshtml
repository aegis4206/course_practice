@*@model IEnumerable<_03View.Models.NightMarket>*@
@using PagedList
@using PagedList.Mvc
@model IPagedList<_03View.Models.NightMarket>

@{
    ViewBag.Title = "南部地區各大夜市";
}

<h2 class="alert-info">南部地區各大夜市</h2>

<p>
    @Html.ActionLink("新增一筆資料", "Create")
</p>
<table class="table">
    <tr>
        <th>編號</th>
        <th>
            夜市名稱
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            夜市店址
            @*@Html.DisplayNameFor(model => model.Address)*@
        </th>
        <th>
            照片
        </th>
        <th>
            地圖
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
                @*@Html.DisplayFor(modelItem => item.Name)*@
            </td>
            <td>
                @item.Address
                @*@Html.DisplayFor(modelItem => item.Address)*@
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
            <td>
                <img src="/images/@(item.Id).png" width="200px" />
            </td>
            <td>
                <a href="google.com/maps/place/@item.Address" target="_blank">查看地圖</a>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model,page=>Url.Action("Index",new { page}))