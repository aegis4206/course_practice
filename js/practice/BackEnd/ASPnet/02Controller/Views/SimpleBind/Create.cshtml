<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新增作業</title>
</head>
<body>
    <form method="post" action="@Url.Action("Create")">
        <h3>產品新增作業</h3>
        <div>
            <p>編號:<input type="text" name="PId" value="@ViewBag.PId" required/></p>
            <p>品名:<input type="text" name="PName" value="@ViewBag.PName" required/></p>
            <p>單價:<input type="text" name="Price" value="@ViewBag.Price" required /></p>
            <p><input type="submit" value="新增" /></p>
        </div>
    </form>
    <hr />
    @{
        if (ViewBag.PId != null && ViewBag.PName != null && ViewBag.Price != null)
        {
            <p>完成產品新增</p>
            <p>編號:@ViewBag.PId | 品名:@ViewBag.Name | 單價:@ViewBag.Price </p>
        }

    }

</body>
</html>
